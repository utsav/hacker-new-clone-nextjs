{
  "name": "hacker-news-clone",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "pretest": "npm run lint:scss && npm run lint:js",
    "lint:js": "eslint --quiet --ext .js,.jsx --ignore-path .gitignore",
    "lint:scss": "stylelint './pages/**/*.scss' './src/**/*.scss'",
    "test": "jest"
  },
  "dependencies": {
    "next": "9.4.4",
    "prop-types": "^15.7.2",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "react-redux": "^7.2.0",
    "redux": "^4.0.5"
  },
  "devDependencies": {
    "@zeit/next-css": "^1.0.1",
    "@zeit/next-sass": "^1.0.1",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.0.1",
    "babel-plugin-transform-export-extensions": "^6.22.0",
    "babel-preset-next": "^1.2.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "eslint": "^7.1.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "^7.20.0",
    "eslint-plugin-react-hooks": "^4.0.4",
    "jest": "^26.0.1",
    "jest-css-modules": "^2.1.0",
    "next-compose-plugins": "^2.2.0",
    "node-sass": "^4.14.1",
    "prettier": "^2.0.5",
    "stylelint": "^13.5.0",
    "stylelint-config-recommended-scss": "^4.2.0",
    "stylelint-scss": "^3.17.2"
  },
  "jest": {
    "setupFiles": [
      "<rootDir>/src/setupTests.js"
    ],
    "moduleNameMapper": {
      "\\.(css|less|scss)$": "<rootDir>/node_modules/jest-css-modules"
    },
    "transform": {
      "^.+\\.(js|jsx)?$": "babel-jest"
    }
  },
  "eslintIgnore": [
    "node_modules/"
  ]
}
